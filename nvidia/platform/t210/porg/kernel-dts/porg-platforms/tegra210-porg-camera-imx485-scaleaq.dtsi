#include "tegra210-camera-imx485-scaleaq.dtsi"
#include <dt-bindings/clock/tegra210-car.h>

#define CAM1_PWDN		TEGRA_GPIO(S, 7)
#define CAM2_PWDN_NEW	TEGRA_GPIO(I, 2)
#define CAM3_PWDN		TEGRA_GPIO(T, 0) // 4 lanes
#define CAM_I2C_MUX0 TEGRA_GPIO(I, 0) // NFC_EN GPIO
#define CAM_I2C_MUX1 TEGRA_GPIO(I, 1) // NFC_INT GPIO

/ {
	cam_i2cmux {
		compatible = "i2c-mux-gpio";
		#address-cells = <1>;
		#size-cells = <0>;
		mux-gpios = <&gpio CAM_I2C_MUX0 GPIO_ACTIVE_HIGH &gpio CAM_I2C_MUX1 GPIO_ACTIVE_HIGH>;
		i2c-parent = <&i2c7>;
		status = "okay";

		i2c@0 {
			status = "okay";
			reg = <3>;
			#address-cells = <1>;
			#size-cells = <0>;

			imx485_a@1a {
				/* Define any required hw resources needed by driver */
				/* ie. clocks, io pins, power sources */
				clocks = <&tegra_car TEGRA210_CLK_CLK_OUT_3>;
				clock-names = "clk_out_3";
				mclk = "clk_out_3";
				clock-frequency = <37125000>;
				reset-gpios = <&gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
			};
		};
	};

	gpio@6000d000 {
		camera-control-output-low {
			gpio-hog;
			output-low;
			gpios = < CAM1_PWDN 0  CAM2_PWDN_NEW 0 CAM3_PWDN 0>;
			label = "cam1-pwdn", "cam2-pwdn", "cam3-pwdn";
		};

		camera-mux-port-0 {
			gpio-hog;
			output-high;
			gpios = <CAM_I2C_MUX0 0 CAM_I2C_MUX1 0>;
			label = "cam-mux-sel0","cam-mux-sel1";
			status = "okay";
		};
	};
};
