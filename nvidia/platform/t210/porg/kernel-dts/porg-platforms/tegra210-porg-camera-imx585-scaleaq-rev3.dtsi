#include "tegra210-porg-camera-imx585.dtsi"
#include <dt-bindings/media/camera.h>
#include <dt-bindings/platform/t210/t210.h>
#include <dt-bindings/clock/tegra210-car.h>

#define CAM1_PWDN		TEGRA_GPIO(S, 7)
#define CAM2_PWDN		TEGRA_GPIO(T, 0)
#define CAM3_PWDN		TEGRA_GPIO(I, 2)
#define CAM_I2C_MUX0 TEGRA_GPIO(I, 0) // NFC_EN GPIO
#define CAM_I2C_MUX1 TEGRA_GPIO(I, 1) // NFC_INT GPIO


/ {
	scaleaq,image-sensor-type = "imx585";

	lens_imx585@dummy {
		min_focus_distance = "0.0";
		hyper_focal = "0.0";
		focal_length = "3.04";
		f_number = "2.0";
		aperture = "0.0";
	};

	gpio@6000d000 {
		camera-control-output-low {
			gpio-hog;
			output-low;
			gpios = < CAM1_PWDN 0  CAM2_PWDN 0 CAM3_PWDN 0>;
			label = "cam1-pwdn", "cam2-pwdn", "cam3-pwdn";
		};

		camera-mux-port-0 {
			gpio-hog;
			output-high;
			gpios = <CAM_I2C_MUX0 0 CAM_I2C_MUX1 0>;
			label = "cam-mux-sel0","cam-mux-sel1";
			status = "okay";
		};
	};

	host1x {
		vi_base: vi {
			num-channels = <2>;
			ports {
				#address-cells = <1>;
				#size-cells = <0>;
				vi_port0: port@0 {
					reg = <0>;
					status = "okay";
					imx585_vi_in0: endpoint {
						port-index = <0>;
						bus-width = <2>;
						remote-endpoint = <&imx585_csi_out0>;
						status = "okay";
					};
				};
				vi_port1: port@1 {
					reg = <1>;
					status = "okay";
					imx585_vi_in1: endpoint {
						port-index = <4>;
						bus-width = <2>;
						remote-endpoint = <&imx585_csi_out1>;
						status = "okay";
					};
				};
			};
		};

		csi_base: nvcsi {
			num-channels = <2>;
			#address-cells = <1>;
			#size-cells = <0>;
			csi_chan0: channel@0 {
				reg = <0>;
				status = "okay";
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					csi_chan0_port0: port@0 {
						reg = <0>;
						status = "okay";
						imx585_csi_in0: endpoint@0 {
							port-index = <0>;
							bus-width = <2>;
							remote-endpoint = <&imx585_out0>;
							status = "okay";
						};
					};
					csi_chan0_port1: port@1 {
						reg = <1>;
						status = "okay";
						imx585_csi_out0: endpoint@1 {
							remote-endpoint = <&imx585_vi_in0>;
							status = "okay";
						};
					};
				};
			};
			csi_chan1: channel@1 {
				reg = <1>;
				status = "okay";
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					csi_chan1_port0: port@2 {
						reg = <0>;
						status = "okay";
						imx585_csi_in1: endpoint@2 {
							port-index = <4>;
							bus-width = <2>;
							remote-endpoint = <&imx585_out1>;
							status = "okay";
						};
					};
					csi_chan1_port1: port@3 {
						reg = <1>;
						status = "okay";
						imx585_csi_out1: endpoint@3 {
							remote-endpoint = <&imx585_vi_in1>;
							status = "okay";
						};
					};
				};
			};
		};
	};

	cam_i2cmux {
		compatible = "i2c-mux-gpio";
		#address-cells = <1>;
		#size-cells = <0>;
		mux-gpios = <&gpio CAM_I2C_MUX0 GPIO_ACTIVE_HIGH &gpio CAM_I2C_MUX1 GPIO_ACTIVE_HIGH>;
		i2c-parent = <&i2c7>;
		status = "okay";

		i2c@0 {
			reg = <0>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			imx585_a@1a {
				/* Define any required hw resources needed by driver */
				/* ie. clocks, io pins, power sources */
				clocks = <&tegra_car TEGRA210_CLK_CLK_OUT_3>;
				clock-names = "clk_out_3";
				mclk = "clk_out_3";
				clock-frequency = <37125000>;
				reset-gpios = <&gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
			};
		};

		i2c@1 {
			reg = <1>;
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			imx585_e@1a {
				/* Define any required hw resources needed by driver */
				/* ie. clocks, io pins, power sources */
				clocks = <&tegra_car TEGRA210_CLK_CLK_OUT_3>;
				clock-names = "clk_out_3";
				mclk = "clk_out_3";
				clock-frequency = <37125000>;
				reset-gpios = <&gpio CAM2_PWDN GPIO_ACTIVE_HIGH>;
			};
		};
	};

	tegra-camera-platform {
		compatible = "nvidia, tegra-camera-platform";

		modules {
			cam_module0: module0 {
				status = "okay";
				cam_module0_drivernode0: drivernode0 {
					status = "okay";
				};
				cam_module0_drivernode1: drivernode1 {
					status = "okay";
					pcl_id = "v4l2_lens";
					proc-device-tree = "/proc/device-tree/lens_imx585@dummy/";
				};
			};
			cam_module1: module1 {
				status = "okay";
				cam_module1_drivernode0: drivernode0 {
					status = "okay";
				};
				cam_module1_drivernode1: drivernode1 {
					status = "okay";
					pcl_id = "v4l2_lens";
					proc-device-tree = "/proc/device-tree/lens_imx585@dummy/";
				};
			};
		};
	};
};
